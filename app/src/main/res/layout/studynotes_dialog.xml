<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/folder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/allcurve_white"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
       android:text="Folder Color"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"/>

        <Button
            android:id="@+id/mainbutton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/mustard"/>

    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <LinearLayout
        android:id="@+id/colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/mustardbutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/mustard"/>
        <Button
            android:id="@+id/navybutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/navy"/>
        <Button
            android:id="@+id/blackbutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/black"/>
        <Button
            android:id="@+id/darkgreybutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/darkgrey"/>
        <Button
            android:id="@+id/terracottabutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/terracotta"/>
        <Button
            android:id="@+id/blue_new"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/blue_change"/>
        <Button
            android:id="@+id/deepGreen"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/deep_green"/>
        <Button
            android:id="@+id/lightGreen"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/light_green"/>
        <Button
            android:id="@+id/orange"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/orange"/>
        <Button
            android:id="@+id/purple"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/purple"/>
        <Button
            android:id="@+id/red"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/red"/>

    </LinearLayout>

    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:background="@drawable/save_button"
            android:clickable="true"
            android:text="Save"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:background="@drawable/cancel_button"
            android:clickable="true"
            android:text="Cancel"
            android:textColor="@android:color/black"
        />
    </LinearLayout>

</LinearLayout>