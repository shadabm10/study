<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/main2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/backlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp">

        <ImageButton
            android:id="@+id/back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/setting"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backlayout"
        android:padding="10dp"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"

            app:civ_border_color="#A9A9A9"
            app:civ_border_width="4dp"

            android:id="@+id/image"
            app:civ_shadow_gravity="center"

           />

        <Button
            android:id="@+id/editpicture"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="5dp"
            android:minWidth="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:background="@color/lightgrey"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/edit"/>


        <RelativeLayout
        android:id="@+id/name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:paddingLeft="10dp"
        >

        <TextView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"



           />
            <TextView
                android:id="@+id/last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/one"


                />
        <TextView
            android:id="@+id/two"
            android:layout_below="@id/last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
           />
        <TextView
            android:id="@+id/three"
            android:layout_below="@id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nameedit"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:paddingLeft="10dp">

            <EditText
                android:id="@+id/edt_firsr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textSize="20sp"

              />
            <EditText
                android:id="@+id/edt_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"

                android:layout_toRightOf="@+id/edt_firsr"
                />
            <EditText
                android:id="@+id/two1"
                android:layout_below="@id/edt_firsr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/three1"
                android:layout_below="@id/two1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:clickable="false"
               />

        </RelativeLayout>


        <ImageButton
         android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:background="@android:color/transparent"
       android:src="@mipmap/edit"
        android:layout_alignParentEnd="true"
        />

        <Button
            android:id="@+id/savebutton"
            android:visibility="invisible"
            android:layout_below="@id/edit"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/save_button"
            android:clickable="true"
            android:text="Save"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="2dp"
        android:layout_below="@+id/picture"/>


    <TextView
        android:id="@+id/change"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@id/picture"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="@string/change"/>

    <LinearLayout
        android:id="@+id/colors"
        android:layout_below="@id/change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible">


        <Button
            android:id="@+id/biscuit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@color/biscuit"
            />
        <Button
            android:id="@+id/white"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            />


        <Button
            android:id="@+id/skyblue"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@color/skyblue"/>

        <Button
            android:id="@+id/pesto"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@color/pesto"/>

        <Button
            android:id="@+id/fave"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@color/fave"/>

        <Button
            android:id="@+id/calmgreen"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@color/calmgreen"/>

        <Button
            android:id="@+id/lightgrey"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightgrey"/>

        <Button
            android:id="@+id/pink"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@color/pink"/>

        <Button
            android:id="@+id/lightblue"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"/>


    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/colors"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Logout"
        android:textSize="15dp"
        android:drawableRight="@mipmap/logout"
        android:drawablePadding="20dp"
        android:layout_below="@id/view2"
        android:textColor="@color/black"/>


</RelativeLayout>