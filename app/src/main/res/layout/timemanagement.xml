<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <LinearLayout
        android:id="@+id/tool"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        >

        <ImageButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/search"
            />

        <LinearLayout
            android:id="@+id/searchfield"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:layout_weight="3"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:hint="Search"
                android:paddingLeft="10dp"
                android:background="@drawable/textarea"
                android:textColor="@android:color/black"
                android:textSize="13sp"

                />

            <ImageButton
                android:id="@+id/cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/delete"
                />

        </LinearLayout>



        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:src="@mipmap/settings"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tool1"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/back"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:layout_weight="3"
            android:orientation="horizontal">

            <EditText

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:hint="Search"
                android:paddingLeft="10dp"
                android:background="@drawable/textarea"
                android:textColor="@android:color/black"
                android:textSize="13sp"

                />

            <ImageButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/delete"
                />

        </LinearLayout>



        <ImageButton
            android:id="@+id/settings1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/settings"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/textView"
        android:layout_below="@+id/tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule"
        android:textStyle="bold"
        android:padding="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <ImageButton
        android:id="@+id/add2"
        android:layout_below="@id/tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/add"
        android:padding="10dp"
        android:background="@android:color/transparent"
        />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView"
        android:background="@color/green"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/day"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="5dp"
            android:background="@color/green"
            android:textColor="@android:color/black"
            android:layout_weight="1.1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subjectname"
            android:gravity="center"
            android:textSize="12sp"
                android:background="@color/green"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/timealloc"
                android:gravity="center"
                android:textSize="12sp"
                android:background="@color/green"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/social"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_weight="1.1"
                android:background="@color/green"

                android:textColor="@android:color/black"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/random"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@color/green"

                android:textColor="@android:color/black"

                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/random"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="8dp"
                android:layout_weight="1.2"
                android:src="@mipmap/bellwhite"
                android:background="@color/green"



                />


        </LinearLayout>




    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll1"/>

    <Button
        android:id="@+id/plan"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/save_button"
        android:clickable="true"
        android:text="Show Plan"
        android:textColor="@android:color/white"
        />


    <LinearLayout
        android:id="@+id/green1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:orientation="horizontal"
        android:background="@color/green">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/day"
            android:padding="10dp"
            android:paddingEnd="50dp"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subjectname"
            android:padding="10dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"/>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="20dp"
       />




</RelativeLayout>